@model Cinema.Dominio.Tbl_FILMES

@{
    ViewBag.Title = "Detalhes";
}


<style>
    body {
        background-image: url("../../Assets/movie.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        color: #FFF;
        height: 620px;
    }

    .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 100%;
        width: 100%;
        padding: 0px;
        background: rgb(10, 10, 10, 0.78);
    }

    .titlePage {
        
        width: 100%;
        text-align: center;
        padding: 20px;
    }

    h1 {
        font-size: 26px;
        font-weight: bold;
        margin: 0;
    }

    .details {
        
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 40px;
    }

    .titleFilme {
        display: flex;
        flex-direction: column;
        text-align: center;
        align-items: center;
    }

        .titleFilme h2 {
            margin: 0;
            font-size: 38px;
            font-weight: 700;
        }

        .titleFilme p {
            font-size: 18px;
            margin: 60px;
            text-align: justify;
            width: 70%;
        }
</style>



<div class="container">

    <div class="titlePage">
        <h1>Detalhes</h1>
    </div>
    <hr style="margin:0" />

    <section class="details">


        <div class="titleFilme">

            <h2>
                @Html.DisplayFor(model => model.Nome)
            </h2>

            <p>
                @Html.DisplayFor(model => model.Descricao)
            </p>

        </div>


        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Id_classificacao):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Tbl_CLASSIFICACAO.Classificacao)<br>
                @Html.DisplayFor(model => model.Tbl_CLASSIFICACAO.Descricao)<br>
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.Duracao):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Duracao)
            </dd>

        </dl>
    </section>

</div>

<script>

    window.addEventListener('load',
        function () {
            this.document.getElementById("headerId").removeAttribute("hidden", "");
        });

</script>